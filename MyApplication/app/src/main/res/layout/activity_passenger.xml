<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PassengerActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/autotv_passgener_finalAddr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:hint="请输入终止地址"
            android:popupBackground="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_passgener_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="" />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_startOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autotv_passgener_finalAddr"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="开始约车" />

    <com.amap.api.maps.MapView
        android:id="@+id/passenger_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_startOrder"
        android:layout_marginTop="5dp">

    </com.amap.api.maps.MapView>


</LinearLayout>
